# Makefile for PHISH library

CC =		mpic++
CCFLAGS =	-g -O -DMPICH_IGNORE_CXX_SEEK
LINK =		mpic++
LINKFLAGS =	-g -O 
LIB =		libphish.a
SYSLIB =
ARCHIVE =	ar
ARFLAGS =	-rc
SIZE =		size

# PHISH library

phish:	phish.o hash.o
	$(ARCHIVE) $(ARFLAGS) libphish.a phish.o hash.o

clean:
	@rm -f *.o
	@rm -f libphish.a

# Rules

%.o:%.cpp
	$(CC) $(CCFLAGS) -c $<

%.o:%.c
	$(CC) $(CCFLAGS) -c $<
