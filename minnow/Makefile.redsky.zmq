# linux.zmq = RedHat Linux box, g++4, PHISH ZMQ lib

SHELL = /bin/sh

# ---------------------------------------------------------------------
# compiler/linker settings
# specify flags and libraries needed for your compiler

CC =		mpic++
CCFLAGS =	-O2 -xsse4.2 -funroll-loops -fstrict-aliasing -I../src
LINK =		mpic++
LINKFLAGS =	-O
LIB =		-rdynamic ../src/libphish-zmq.so /ascldap/users/tshead/install/zmq/lib/libzmq.so
LIB_RPATH =     -Wl,-rpath,/ascldap/users/tshead/build/phish/src:/ascldap/users/tshead/install/zmq/lib

# ---------------------------------------------------------------------
# build rules and dependencies
# no need to edit this section

OBJ = $(EXE).o

$(EXE): $(OBJ)
	$(LINK) $(LINKFLAGS) $(OBJ) $(LIB) -o $(EXE) $(LIB_RPATH)

# Rules

%.o:%.cpp
	$(CC) $(CCFLAGS) -c $<

%.o:%.c
	$(CC) $(CCFLAGS) -c $<
